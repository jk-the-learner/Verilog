module TLC (	input clk,
				input light);
begin
	reg [1:0] light;
	parameter RED = 2'b00, GREEN = 2'b01, YELLOW = 2'b10;
	parameter S0 = 0, S1 = 1, S2 = 2;
	reg [1:0] state;
	always @(posedge clk)
	begin
		case (state)
		S0: state <= S1;
		S1: state <= S2;
		S2: state <= S0;
		default: state <= S0;
		endcase
	end
	
	always @(state)
	begin
		case (state)
			S0: light = RED;
			S1: light = GREEN;
			S2: light = YELLOW;
			default light = RED;
		endcase
	end
endmodule
